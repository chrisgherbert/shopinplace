<header class="main-header" id="main-header">

	<div class="main-header__left">

		<a href="{{ site.url }}" rel="home" class="main-header__link">
			<img class="main-header__logo" src="{{ theme.link }}/assets/img/logo.svg" alt="{{ site.name }}" role="banner">
			<div class="main-header__subtitle">
				Help Support Chicago's Hometown Entrepreneurs
			</div>
		</a>


	</div>

	<div class="main-header__middle">

		<nav class="main-menu hidden-xs" role="navigation">
			<ul class="main-menu__list">

				{% for item in main_menu.items %}
					<li class="main-menu__item {{ item.classes|join(' ') }}">
						<a class="main-menu__link" href="{{ item.url }}">
							{{ item.title }}
						</a>
					</li>
				{% endfor %}

				<li class="main-menu__item">
					<a href="#" class="main-menu__link mobile-trigger" id="mobileTrigger" aria-controls="mobileMenu">
						<i class="fa fa-bars" aria-hidden="true"></i>
						<span class="sr-only">Mobile Menu</span>
					</a>
				</li>

			</ul>
		</nav>

	</div>

</header>